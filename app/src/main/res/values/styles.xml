<resources xmlns:android="http://schemas.android.com/tools" android:ignore="NamespaceTypo">

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>


    <style name="EditText" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:background">@drawable/edt_config</item>
        <item name="android:bottomRightRadius">10dp</item>
        <item name="android:layout_width">342dp</item>
        <item name="android:layout_height">50dp</item>
        <item name="android:inputType">textPersonName</item>
        <item name="android:hint">User</item>
        <item name="android:fontFamily">@font/helveticaneue</item>
        <item name="android:ems">10</item>
        <item name="android:textSize">15sp</item>
        <item name="android:padding">3dp</item>
        <item name="editTextColor">#A8B4C4</item>
    </style>


    <style name="btnLogin" parent="Theme.AppCompat.Light.NoActionBar">

        <item name="android:background">#3B48EE</item>
        <item name="android:shadowColor">#243b48ee</item>
        <item name="android:shadowDx">10</item>
        <item name="android:shadowDy">10</item>
        <item name="android:shadowRadius">10</item>
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:text">Login</item>
        <item name="android:textSize">16sp</item>
        <item name="android:fontFamily">@font/helveticaneue</item>



    </style>



</resources>
