<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".statements.StatementsActivity" tools:layout_editor_absoluteY="25dp">

    <View
            style="@style/viewStatements"
            android:id="@+id/view"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>

    <TextView
            style="@style/txtNome"
            android:id="@+id/txtNome"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            app:layout_constraintTop_toTopOf="@+id/view" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="18dp" app:layout_constraintBottom_toBottomOf="@+id/view"
            android:layout_marginBottom="163dp"/>

    <TextView
            style="@style/contaTXT"
            android:layout_marginTop="28dp"
            app:layout_constraintTop_toBottomOf="@+id/txtNome" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="18dp"/>
    <TextView
            style="@style/txtConta"
            android:id="@+id/txtConta"
            android:layout_marginTop="47dp"
            app:layout_constraintTop_toBottomOf="@+id/txtNome" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="18dp"/>

    <TextView
            style="@style/saldoTXT"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:ignore="MissingConstraints"
            android:id="@+id/textView" android:layout_marginTop="97dp"
            app:layout_constraintTop_toBottomOf="@+id/txtNome" android:layout_marginStart="18dp"
            app:layout_constraintStart_toStartOf="parent"/>
    <TextView
            style="@style/txtSaldo"
            android:id="@+id/txtSaldo"
            android:layout_marginTop="117dp"
            app:layout_constraintTop_toBottomOf="@+id/txtNome" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="18dp"/>

    <android.support.v7.widget.RecyclerView
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:id="@+id/recyclerView"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginTop="8dp" app:layout_constraintTop_toBottomOf="@+id/textView2"/>
    <TextView
            android:text="Recentes"
            android:textSize="17sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="18dp"
            android:layout_marginTop="10dp" app:layout_constraintTop_toBottomOf="@+id/view"
            android:id="@+id/textView2"/>
</android.support.constraint.ConstraintLayout>