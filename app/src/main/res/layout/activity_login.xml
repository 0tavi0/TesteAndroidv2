<?xml version="1.0" encoding="utf-8"?>


<ScrollView
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".login.LoginActivity">
<android.support.constraint.ConstraintLayout

        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".login.LoginActivity">

    <ImageView
            android:layout_width="125dp"
            android:layout_height="70dp"
            android:src="@drawable/logo3x"
            android:id="@+id/logo"
            tools:ignore="MissingConstraints"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="126dp"
            android:layout_marginEnd="124dp"
            android:layout_marginTop="56dp"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginBottom="541dp"
            app:layout_constraintBottom_toBottomOf="parent"/>
    <EditText
            style="@style/EditText"
            android:id="@+id/edtUser" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="17dp" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="16dp" android:layout_marginTop="231dp" app:layout_constraintTop_toTopOf="parent"
            android:layout_marginBottom="370dp" app:layout_constraintBottom_toBottomOf="parent"/>
    <EditText
          style="@style/EditText"
            android:inputType="textPassword"
            android:hint="Password"
            android:id="@+id/edtPassword" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="16dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="17dp"
            android:layout_marginTop="302dp" app:layout_constraintTop_toTopOf="parent"
            android:layout_marginBottom="315dp"
            app:layout_constraintBottom_toBottomOf="parent"/>
    <Button
            android:background="@drawable/btn_config"
            style="@style/btnLogin"
            android:layout_width="202dp"
            android:layout_height="62dp"
            android:id="@+id/btnLogin"
            android:visibility="visible"
            app:layout_constraintBottom_toBottomOf="parent" android:layout_marginBottom="50dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="86dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="87dp"
            android:layout_marginTop="572dp" app:layout_constraintTop_toTopOf="parent"/>
    <ProgressBar
            style="?android:attr/progressBarStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/progressBar"
            android:visibility="invisible"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="8dp"
            android:layout_marginTop="8dp" app:layout_constraintTop_toBottomOf="@+id/edtPassword"
            android:layout_marginBottom="8dp" app:layout_constraintBottom_toTopOf="@+id/btnLogin"/>
</android.support.constraint.ConstraintLayout>

</ScrollView>